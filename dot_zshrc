export ZSH_CONFIG_DIR="$HOME/.zsh"

# Must be loaded first.
source "$ZSH_CONFIG_DIR/zinit.zsh"

source "$ZSH_CONFIG_DIR/homebrew.zsh"

# Must be loaded before appearance.zsh and plugins.zsh.
source "$ZSH_CONFIG_DIR/env.zsh"

# Must be loaded after env.zsh.
source "$ZSH_CONFIG_DIR/appearance.zsh"

source "$ZSH_CONFIG_DIR/aliases.zsh"

source "$ZSH_CONFIG_DIR/functions.zsh"

# Must be loaded before plugins.zsh.
source "$ZSH_CONFIG_DIR/fzf.zsh"

# Must be loaded after env.zsh and fzf.zsh, but before prompt.zsh.
source "$ZSH_CONFIG_DIR/plugins.zsh"

# Must be loaded after plugins.zsh.
source "$ZSH_CONFIG_DIR/prompt.zsh"

eval "$(mise activate zsh)"

eval "$(zoxide init --cmd cd zsh)"

eval "$(gh copilot alias -- zsh)"

eval $(thefuck --alias)

eval "$(register-python-argcomplete pipx)"
